{
    "$id": "vocab@vera-standard@1.0",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Metadata Vocabulary",
    "description": "List of possible metadata entries for an object.",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "key": {
                "type": "string",
                "pattern": "^[A-Za-z_/.]+$",
                "description": "Identifier for Metadata-Entry",
                "examples": [
                    "FEQUENCY_OF_SOLUTIONS",
                    "MAIN_DOMAIN_MA8"
                ]
            },
            "label": {
                "type": "string"
            },
            "values": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "key": {
                            "type": "string"
                        },
                        "label": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "key"
                    ]
                },
                "minItems": 1
            }
        },
        "required": [
            "key",
            "values"
        ]
    }
}