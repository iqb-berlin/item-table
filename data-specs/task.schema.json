{
    "$id": "task@vera-standard@1.0",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Task",
    "description": "Data structure to describe a task as part of an assessment in education.",
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[A-Za-z_]+$",
        "description": "Identifier for task",
        "examples": ["M0139m", "G38847A_v2"]
      },
      "label": {
        "type": "string",
        "description": "Short internal name. Used in Lists and for filenames.",
        "examples": ["WÃ¼rfel2", "Radiointerview"]
      },
      "title": {
        "type": "string",
        "description": "Use this title in booklets.",
        "examples": ["Ein toller Ausflug", "Wer ist Adalbert Schnupf?"]
      },
      "subject": {
        "type": "string",
        "enum": ["V3MA", "V3DE", "V8MA", "V8DE", "V8EN", "V8FR"],
        "description": "Refers to VERA-Projekt (VERA3 or VERA8) and to subject (mathematics, German, English, French)",
        "examples": ["V3MA", "V8DE"]
      },
      "metadata": {
        "type": "array",
        "description": "List of metadata",
        "items": {
          "$ref": "metadata-entry.schema.json"
        }
      },
      "itemMetricsReliability": {
        "type": "string",
        "enum": ["FULL", "LIMITED", "NONE", "NOT_AVAILABLE"],
        "description": "Important if the items have metrics (frequency of solution, logits etc.) and these metrics are not fully reliable."
      },
      "yearOfTryout": {
        "type": "integer"
      },
      "yearOfPreviousApplication": {
        "type": "integer"
      },
      "yearOfApplication": {
        "type": "integer"
      }
    },
    "required": ["id", "label", "title", "subject"]
  }