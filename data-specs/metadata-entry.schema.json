{
    "$id": "metadata-entry@vera-standard@1.0",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Metadata Entry",
    "description": "Data structure to describe an entry in a list of metadata of an object.",
    "type": "object",
    "properties": {
      "key": {
        "type": "string",
        "pattern": "^[A-Z_]+$",
        "description": "Identifier for Metadata-Entry",
        "examples": ["FEQUENCY_OF_SOLUTIONS", "MAIN_DOMAIN_MA8"]
      },
      "value": {
        "anyOf": [
          {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          {
            "type": "string"
          }
        ],
        "description": "Value for Metadata-Entry; can be a simple value or a reference to a vocabulary",
        "examples": ["es3", "1997", 6, ["L3", "L2"]]
      },
      "asText": {
        "type": "object",
        "description": "label and value to be listed for humans",
        "properties": {
          "label": {
            "type": "string",
            "examples": ["Lösungshäufigkeit Gymnasien", "Kompetenz"]
          },
          "value": {
            "type": "string",
            "examples": ["9,4", "1.203,84", "2.4a, 3.5c"]
          }
        }
      }
    }
}
